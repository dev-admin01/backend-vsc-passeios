{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src",
    "src/api",
    "test",
    "prisma",
    "seeds"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}